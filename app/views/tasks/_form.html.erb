<%= form_for(@task, :html => { :class => "form-stacked" }) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="clearfix">
    <%= f.label :category %>
    <div class="input">
      <%= f.collection_select :category_id, Category.all, :id, :name %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :data %>
    <div class="input">
      <%= f.text_area :data, :rows => 6, :cols => 50 %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :date, "Date (Optional)" %>
    <div class="input">
      <%= f.text_field :date, :class => "datepicker" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Create Task", :class => "btn primary" %>
  </div>
<% end %>
